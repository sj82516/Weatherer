<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:includeFontPadding="false"
    android:weightSum="10">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#fffcfdff"
        android:id="@+id/XX"
        android:paddingBottom="0dp"
        android:paddingTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="What the other thinking"
            android:id="@+id/txt_avg_title"
            android:paddingBottom="0dp"
            android:textSize="25sp"
            android:textColor="#ff030303"
            android:layout_weight="2"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:includeFontPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:includeFontPadding="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="T"
                android:id="@+id/txt_t"
                android:textSize="110sp"
                android:layout_marginTop="-15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:includeFontPadding="false"
                android:text="H"
                android:layout_marginTop="-15dp"
                android:id="@+id/txt_h"
                android:textSize="110sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:layout_marginTop="-15dp"
                android:text="W"
                android:id="@+id/txt_w"
                android:textSize="110sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_weight="1.3"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-15dp"
                android:includeFontPadding="false"
                android:text="R"
                android:id="@+id/txt_r"
                android:textSize="110sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="5"
        android:gravity="center|center_vertical|center_horizontal"
        android:background="#B7DEE8"
        android:weightSum="5"
        android:paddingLeft="20dp"
        android:paddingRight="30dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_minus"
            android:src="@mipmap/minus"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:background="#B7DEE8" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/img_score"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:background="#B7DEE8"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_plus"
            android:src="@mipmap/plus"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#B7DEE8"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="2"

        android:background="#4BACC6">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Button"
            android:id="@+id/btn_temp"
            android:layout_weight="1"
            android:src="@mipmap/sun"
            android:scaleType="fitCenter"
            android:background="#4BACC6"
            android:padding="10dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Button"
            android:id="@+id/btn_hmd"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/rain"
            android:background="#4BACC6"
            android:padding="10dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Button"
            android:id="@+id/btn_spd"
            android:layout_weight="1"
            android:src="@mipmap/wind"
            android:scaleType="fitCenter"
            android:background="#4BACC6"
            android:padding="10dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Button"
            android:id="@+id/btn_rain"
            android:layout_weight="1"
            android:src="@mipmap/storm"
            android:scaleType="fitCenter"
            android:background="#4BACC6"
            android:padding="10dp" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Button"
            android:id="@+id/btn_next"
            android:layout_weight="1"
            android:src="@mipmap/arrow"
            android:scaleType="fitCenter"
            android:background="#4BACC6"
            android:padding="10dp" />

    </LinearLayout>

</LinearLayout>